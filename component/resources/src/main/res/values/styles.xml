<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="HeaderText"
		parent="Widget.AppCompat.TextView">
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">@dimen/text_header_size</item>
		<item name="android:fontFamily">@font/montserrat_medium</item>
	</style>

	<style name="SimpleText"
		parent="Widget.AppCompat.TextView">
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">@dimen/text_simple_size</item>
		<item name="android:fontFamily">@font/montserrat_regular</item>
	</style>

	<style name="InputText"
		parent="Widget.AppCompat.TextView">
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">@dimen/text_simple_size</item>
		<item name="android:fontFamily">@font/montserrat_regular</item>
	</style>

	<style name="BackButton"
		parent="Widget.AppCompat.ImageButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:backgroundTint">@color/dark_grey</item>
		<item name="android:src">@drawable/baseline_arrow_back_36</item>
	</style>

	<style name="ProgressBar"
		parent="Widget.AppCompat.ProgressBar">
		<item name="android:layout_width">@dimen/size_88</item>
		<item name="android:layout_height">@dimen/size_88</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:indeterminateTint">@color/dark_grey</item>
		<item name="android:visibility">invisible</item>
	</style>
</resources>